            <div class="text-center b">
                <button class="btn btn-info submit urlButton">Submit</button>
            </div>
              <div class="results hidden text-center">
                <button class="copy btn btn-success urlButton">Copy</button>
                <a href="#" class="btn btn-primary clear hidden text-center">Clear</a>
              </div>
        </div>
    </div>
  </main>

